namespace pandora.serialization;

struct Vec3 {
	x: float;
	y: float;
	z: float;
}

struct Bounds {
	min: Vec3;
	max: Vec3;
}

table TriangleMesh
{
	numTriangles: uint32;
	numVertices: uint32;
	triangles: [byte];
	positions: [byte];
	normals: [byte];
	tangents: [byte];
	uvCoords: [byte];
	bounds: Bounds;
}

root_type TriangleMesh;