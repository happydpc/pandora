{
    "GSL": {
        "all": {
            "download": {
                "git": "https://github.com/Microsoft/GSL.git"
            },
            "build": {
                "build_system": "CMake",
                "flags": [
                    "-DGSL_TEST=OFF"
                ]
            }
        }
    },
    "glfw3": {
        "all": {
            "download": {
                    "git": "https://github.com/glfw/glfw.git"
            },
            "build": {
                "build_system": "CMake",
                "flags": [
                    "-DGLFW_BUILD_DOCS=OFF",
                    "-DGLFW_BUILD_TESTS=OFF",
                    "-DGLFW_BUILD_EXAMPLES=OFF"
                ]
            }
        }
    },
    "GTest": {
        "windows": {
            "download": {
                "git": "https://github.com/google/googletest.git"
            },
            "build": {
                "build_system": "CMake",
                "flags": [
                    "-DCMAKE_CXX_FLAGS='/D_SILENCE_TR1_NAMESPACE_DEPRECATION_WARNING /D_SILENCE_CXX17_ITERATOR_BASE_CLASS_DEPRECATION_WARNING'",
                    "-Dgtest_force_shared_crt=ON"
                ]
            }
        },
        "unix": {
            "download": {
                    "git": "https://github.com/google/googletest.git"
            },
            "build": {
                "build_system": "CMake"
            }
        }
    },
    "Boost": {
        "all": {
            "download": {
                    "url": "https://dl.bintray.com/boostorg/release/1.65.1/source/boost_1_65_1.tar.gz",
                    "unpack_folder":  "boost_1_65_1"
            },
            "build": {
                "build_system": "boost",
                "with_libraries": ["fiber", "system"]
            }
        }
    },
    "GLEW": {
        "all": {
            "download": {
                    "url": "https://github.com/nigels-com/glew/releases/download/glew-2.1.0/glew-2.1.0.zip",
                    "unpack_folder": "glew-2.1.0"
            },
            "build": {
                "build_system": "CMake",
                "cmakelists_folder": "build/cmake/",
                "flags": [
                    "-DBUILD_SHARED_LIBS=OFF"
                ]
            }
        }
    },
    "tbb": {
        "windows": {
            "download": {
                "url": "https://github.com/01org/tbb/releases/download/2018_U2/tbb2018_20171205oss_win.zip",
                "unpack_folder": "tbb2018_20171205oss"
            },
            "build": {
                "build_system": "none"
            }
        },
        "unix": {
            "download": {
                "url": "https://github.com/01org/tbb/archive/2018_U2.zip",
                "unpack_folder": "tbb-2018_U2"
            },
            "build": {
                "build_system": "none"
            }
        }
    },
    "assimp": {
        "all": {
            "download": {
                "url": "https://github.com/assimp/assimp/archive/v4.1.0.zip",
                "unpack_folder": "assimp-4.1.0"
            },
            "build": {
                "build_system": "CMake",
                "flags": [
                    "-DASSIMP_BUILD_TESTS=OFF",
                    "-DASSIMP_BUILD_ASSIMP_TOOLS=OFF"
                ]
            }
        }
    },
    "embree": {
        "all": {
            "download": {
                "url": "https://github.com/embree/embree/archive/v2.17.1.tar.gz",
                "unpack_folder": "embree-2.17.1"
            },
            "build": {
                "build_system": "CMake",
                "flags": [
                    "-DEMBREE_ISPC_SUPPORT=OFF",
                    "-DEMBREE_TUTORIALS=OFF"
                ]
            }
        }
    }
}